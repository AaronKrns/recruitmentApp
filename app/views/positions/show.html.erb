<div class="container-fluid">
<div class="row">
  <div class="col-sm-2">
  </div>
  <div class="col-sm-8 text-center" id="border">
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Position title:</strong>
      <%= @position.title %>
    </p>
    <p>
      <strong>Position description:</strong>
      <%= @position.description %>
    </p>
    <p><b>Candidates</b></p>
    <% @position.candidates.each do |candidate| %>
      <p>
        <p>Name: <%= candidate.name %></p>
        <p>CV Rating (1 - high, 2 - average, 3 - low): <%= candidate.cv_rating %></p>
        <p>Availability: <%= candidate.availability %></p>
        <p>Interview stage (1 or 2): <%= candidate.interview_stage %></p>
        <p>Phone number: <%= candidate.phone_number %></p>
        <p>Email: <%= candidate.email %></p>
        </br>
      </p>
    <% end %>
    <%= link_to 'Edit position', edit_position_path(@position) %> |
    <%= link_to 'Back', positions_path %> |
    <%= link_to 'Show candidates', position_candidates_path(@position) %>
    <br>
  </div>
  <div class="col-sm-2">
  </div>
</div>
</div>  
</br>
</br>


<div class="container-fluid">
<div class="row">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4 text-center">
  <%= button_to "Delete position", @position, method: :delete %>
  </div>
  <div class="col-sm-4">
  </div>
</div>
</div>

